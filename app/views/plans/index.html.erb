<div class="page-header">
  <h1>
    Plans
    <a href="/plans/new" class="btn btn-lg btn-success">New Plan</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Hours</th>
        <th>Actions</th>
      </tr>

      <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.price %></td>
        <td><%= plan.hours %></td>
        <td>
          <a href="/plans/<%= plan.id %>" class="btn btn-primary">Show</a>
          <a href="/plans/<%= plan.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_plan/<%= plan.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
